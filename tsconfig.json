{
  "compilerOptions": {
    "target": "es5",
    "lib": [
      "es2017",
      "dom"
    ],
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": false,
    "noEmitHelpers": false,
    "pretty": true,
    "sourceMap": true,
    "strictNullChecks": false,
    "baseUrl": "./src",
    "paths": {
      "base/*": [
        "./base/*"
      ],
      "base": [
        "./base"
      ],
      "app": [
        "./app"
      ],
      "app/*": [
        "./app/*"
      ]
    },
    "typeRoots": [
      "node_modules/@types"
    ],
    "types": [
      "chai",
      "core-js",
      "mocha",
      "node",
      "sinon",
      "systemjs",
      "webpack",
      "immutable"
    ]
  },
  "exclude": [
    "node_modules",
    "compiled",
    "src/app/index.aot.ts"
  ],
  "compileOnSave": false,
  "buildOnSave": false,
  "atom": {
    "rewriteTsconfig": false
  }
}
