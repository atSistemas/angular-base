{
  "compileOnSave": false,
  "buildOnSave": false,
  "compilerOptions": {
    "module": "commonjs",
    "target": "es6",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "noImplicitAny": false,
    "removeComments": false,
    "sourceMap": false,
    "inlineSourceMap": true,
    "moduleResolution": "node"
  },
  "awesomeTypescriptLoaderOptions": {
    "useBabel": true,
    "useCache": false,
    "emitRequireType": false,
    "useWebpackText": true
  },
  "exclude": [
    "node_modules",
    "dist",
    "server",
    "webpack",
    "typings",
    ".git"
  ],
  "files": [
    "typings/index.d.ts"
  ]
}
