{
  "compilerOptions": {
    "target": "es6",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": false,
    "noEmitHelpers": false,
    "pretty": true,
    "sourceMap": true,
    "lib": [
      "es6",
      "dom"
    ],
    "strictNullChecks": false,
    "baseUrl": "./src",
    "paths": {
      "base": ["./src/base"]
    },
    "typeRoots": [
      "node_modules/@types"
    ],
    "types": [
      "chai",
      "core-js",
      "mocha",
      "node",
      "sinon",
      "systemjs",
      "webpack"
    ]
  },
  "exclude": [
    "node_modules",
    "compiled"
  ],
  "awesomeTypescriptLoaderOptions": {
    "useWebpackText": true,
    "forkChecker": false,
    "useCache": true
  },
  "compileOnSave": false,
  "buildOnSave": false,
  "atom": {
    "rewriteTsconfig": false
  }
}
