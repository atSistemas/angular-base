{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "lib": ["es2017","dom"],
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": false,
    "noEmitHelpers": false,
    "pretty": true,
    "sourceMap": true,
    "strictNullChecks": false,
    "baseUrl": "./src",
    "paths": {
      "base/*": [
        "./base/*"
      ],
      "base": [
        "./base"
      ]
    },
    "typeRoots": [
      "node_modules/@types"
    ],
    "types": [
      "chai",
      "core-js",
      "mocha",
      "node",
      "sinon",
      "systemjs",
      "webpack"
    ]
  },
  "exclude": [
    "node_modules",
    "compiled"
  ],
  "awesomeTypescriptLoaderOptions": {
    "useWebpackText": true,
    "forkChecker": false,
    "useCache": true
  },
  "compileOnSave": false,
  "buildOnSave": false,
  "atom": {
    "rewriteTsconfig": false
  }
}
