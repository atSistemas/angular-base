{
  "name": "Angular2Base",
  "version": "0.9.5",
  "description": "Angular2 Redux based starterkit",
  "author": "Pablo Magaz",
  "contributors": [
    {
      "name": "Rafael Bernad",
      "email": "rbernad@atsistemas.com"
    },
    {
      "name": "Luis Martinez Marina",
      "email": "lmartinez.marina@atsistemas.com"
    }
  ],
  "scripts": {
    "logo": "node ./.base/logo.js",
    "webpack": "node_modules/webpack/bin/webpack.js",
    "typings": "node_modules/typings/dist/bin.js",
    "generate": "npm run logo && yo react-base",
    "generate:component": "npm run logo && yo react-base --option=2",
    "generate:container": "npm run logo && yo react-base --option=1",
    "regenerate:modelIndex": "node ./src/base/shared/Regenerate.js --model",
    "regenerate:routes": "node ./src/base/shared/Regenerate.js --routes",
    "regenerate:reducerIndex": "node ./src/base/shared/Regenerate.js --reducer",
    "regenerate": "npm run logo && node ./src/base/shared/Regenerate.js --all",
    "build": "cross-env NODE_ENV=production webpack --config webpack/webpack.config.babel.js",
    "lint": "npm run logo && node node_modules/eslint/bin/eslint.js src --ignore-pattern **/*.spec.js  --ext .js --ext .jsx",
    "lint:css": "npm run logo && stylelint \"src/**/*.css\" --config .stylelintrc",
    "lint:all": "npm run lint && npm run lint:css",
    "test": "npm run logo && mocha --compilers js:babel-core/register --recursive \"./src/**/*.spec.js\" --require ignore-styles \"./src/base/shared/JsDomSetup.js\"",
    "test:coverage": "nyc npm test && nyc report --reporter=lcov",
    "start": "npm run logo && cross-env NODE_ENV=development node server/",
    "start:prod": "npm run build && cross-env NODE_ENV=production node server/",
    "postYeomanGenerator": "npm run regenerate && npm run start",
    "yo": "npm link src/conf/.react-base/templates/generator-react-base",
    "coveralls": "cat ./coverage/lcov.info | ./node_modules/.bin/coveralls",
    "create:typings": "rimraf typings/ && typings install",
    "postinstall": "npm run create:typings && npm run yo && npm run test:coverage"
  },
  "devDependencies": {
    "@types/core-js": "^0.9.28",
    "@types/node": "^4.0.30",
    "@types/requirejs": "^2.1.26",
    "@angular/common": "2.0.0-rc.5",
    "@angular/compiler": "2.0.0-rc.5",
    "@angular/compiler-cli": "^0.5.0",
    "@angular/core": "2.0.0-rc.5",
    "@angular/http": "2.0.0-rc.5",
    "@angular/platform-browser": "2.0.0-rc.5",
    "@angular/platform-browser-dynamic": "2.0.0-rc.5",
    "@angular/router": "^3.0.0-rc.1",
    "angular2-template-loader": "^0.5.0",
    "assets-webpack-plugin": "^3.4.0",
    "awesome-typescript-loader": "^2.2.1",
    "clean-css": "^3.4.9",
    "core-js": "^2.4.1",
    "cross-env": "^2.0.0",
    "eslint": "^3.2.2",
    "ignore-loader": "^0.1.1",
    "immutable": "^3.8.1",
    "json-loader": "^0.5.4",
    "ng2-redux": "^3.3.3",
    "ng2-redux-router": "^1.0.1",
    "raw-loader": "^0.5.1",
    "redux": "^3.5.2",
    "redux-logger": "^2.6.1",
    "redux-observable": "^0.9.0",
    "reflect-metadata": "^0.1.4",
    "rimraf": "^2.5.4",
    "run-sequence": "^1.1.5",
    "rxjs": "^5.0.0-beta.10",
    "string-replace-loader": "^1.0.3",
    "to-string-loader": "^1.1.4",
    "ts-helpers": "github:gdi2290/ts-helpers",
    "ts-loader": "^0.8.2",
    "ts-node": "^1.2.2",
    "tslint": "^3.2.1",
    "tslint-eslint-rules": "^1.0.1",
    "typed-immutable-record": "0.0.5",
    "typescript": "^2.0.0-beta",
    "webpack": "^2.1.0-beta.21",
    "webpack-dashboard": "0.0.1",
    "webpack-dev-middleware": "^1.6.1",
    "webpack-dev-server": "^2.1.0-beta.0",
    "zone.js": "^0.6.12"
  }
}