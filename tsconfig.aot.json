{
  "compilerOptions": {
    "target": "es5",
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": false,
    "noEmitHelpers": false,
    "pretty": true,
    "allowUnreachableCode": false,
    "allowUnusedLabels": false,
    "sourceMap": true,
    "strictNullChecks": false,
    "rootDir": "./src/",
    "lib": [
      "es5",
      "dom"
    ],
    "baseUrl": "./src",
    "paths": {
      "base": ["./base"]
    },
    "types": [
      "core-js",
      "node",
      "systemjs"
    ]
  },
  "exclude": [
    "node_modules",
    "dist"
  ],
  "awesomeTypescriptLoaderOptions": {
    "useWebpackText": true,
    "forkChecker": true,
    "useCache": true
  },
  "compileOnSave": false,
  "buildOnSave": false,
  "atom": {
    "rewriteTsconfig": false
  },
  "files": [
  "src/app/app.module.ts"
],

"angularCompilerOptions": {
  "genDir": "./dist/aot",
  "debug": true,
 "skipMetadataEmit" : true
}
}
