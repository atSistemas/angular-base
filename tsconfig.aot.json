{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "lib": ["es6","dom"],
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "noEmitHelpers": true,
    "pretty": false,
    "sourceMap": true,
    "noEmit": true,
    "strictNullChecks": false,
    "skipDefaultLibCheck": true,
    "baseUrl": "./src",
    "paths": {
      "@base": ["./src/base"]
    },
    "typeRoots": [
      "node_modules/@types"
    ]
  },
  "exclude": [
    "dist",
    ".base",
    "webpack",
    "node_modules",
    "src/compiled",
    "src/**/*.e2e.ts",
    "src/**/*.spec.ts",
    "server/",
    "src/base/wp-plugins",
    "src/app/index.aot.ts"
  ],
  "awesomeTypescriptLoaderOptions": {
    "useWebpackText": true,
    "forkChecker": true,
    "useCache": true
  },
  "compileOnSave": false,
  "buildOnSave": false,
  "atom": { "rewriteTsconfig": false },
  "angularCompilerOptions": {
   "genDir": "src/compiled",
   "skipMetadataEmit" : true
 }
}
