{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "declaration": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "noUnusedParameters": false,
    "strictNullChecks": false,
    "lib": ["es6", "es2015", "dom"],
    "skipLibCheck": false,
    "module": "commonjs",
    "moduleResolution": "node",
    "noEmitOnError": true,
    "noImplicitAny": false,
    "outDir": "./compiled",
    "sourceMap": true,
    "target": "es5",
    "stripInternal": false,
    "baseUrl": "./src",
    "paths": {
      "base/*": [
        "./base/*"
      ],
      "base": [
        "./base"
      ]
    },
    "typeRoots": [
      "node_modules/@types"
    ]
  },
  "exclude": [
    "dist",
    ".base",
    "webpack",
    "node_modules",
    "compiled",
    "src/**/*.e2e.ts",
    "src/**/*.spec.ts",
    "server/",
    "src/base/wp-plugins",
    "src/app/index.aot.ts"
  ],
  "awesomeTypescriptLoaderOptions": {
    "useWebpackText": true,
    "forkChecker": true,
    "useCache": true
  },
  "compileOnSave": false,
  "buildOnSave": false,
  "angularCompilerOptions": {
   "skipMetadataEmit" : false
 }
}